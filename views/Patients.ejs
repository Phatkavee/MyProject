<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Hospitals</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
</head>

<body>
    <h1>View Patients</h1>
    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Disease</th>
            <th>Symptoms</th>
            <th>Treatment</th>

        </tr>
        <% for (var i = 0; i < Patients.length; i++) { %>
            <tr>
                <td><%= Patients[i].ID %></td>
                <td><%= Patients[i].Name %></td>
                <td><%= Patients[i].Disease %></td>
                <td><%= Patients[i].Symptoms %></td>
                <td><%= Patients[i].Treatment %></td>
                <td class="actions">
                    <a href="/Patient/<%= Patients[i].ID %>">View</a>
                    <a href="/updatePatient/<%= Patients[i].ID %>">Update</a>
                    <a href="/deletePatient/<%= Patients[i].ID %>">Delete</a>
                </td>
            </tr>
        <% } %>
    </table>
    <a href="/createPatient" class="create-link">Create New Patient</a>
    <a href="/Doctors" class="create-link">View Doctors</a>
    <a href="/" class="create-link">View Hospitals</a>

</body>
</html>
