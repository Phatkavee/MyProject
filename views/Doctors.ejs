<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Hospitals</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
</head>

<body>
    <h1>View Doctors</h1>
    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Department</th>
        </tr> 
        <% for (var i = 0; i < Doctors.length; i++) { %>
            <tr>
                <td><%= Doctors[i].ID %></td>
                <td><%= Doctors[i].Name %></td>
                <td><%= Doctors[i].Department %></td>
                <td class="actions">
                    <a href="/Doctor/<%= Doctors[i].ID %>">View</a>
                    <a href="/updateDoctor/<%= Doctors[i].ID %>">Update</a>
                    <a href="/deleteDoctor/<%= Doctors[i].ID %>">Delete</a>
                </td>
            </tr>
        <% } %>
    </table>
    <a href="/createDoctor" class="create-link">Create New Doctor</a>
    <a href="/Patients" class="create-link">View Patients</a>
    <a href="/" class="create-link">View Hospitals</a>
</body>
</html>